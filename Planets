def calculate_distance(planet_name):
    # Словарь с расстояниями от Солнца до планет (в миллионах километров)
    distances = {
        "Меркурий": 57.91,
        "Венера": 108.2,
        "Земля": 149.6,
        "Марс": 227.9,
        "Юпитер": 778.5,
        "Сатурн": 1434,
        "Уран": 2871,
        "Нептун": 4495
    }

    # Приведение ввода к единому регистру
    planet_name = planet_name.capitalize()

    # Проверка, есть ли такая планета в словаре
    if planet_name in distances:
        return f"Расстояние от Солнца до планеты {planet_name} составляет {distances[planet_name]} миллионов километров."
    else:
        return "Планета не найдена. Проверьте написание названия."

# Ввод пользователя
user_planet = input("Введите название планеты: ")
print(calculate_distance(user_planet))
